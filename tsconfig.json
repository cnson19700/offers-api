{
    "compilerOptions": {
        "esModuleInterop": true,
        "lib": [
            "es2020"
        ],
        "module": "CommonJS",
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "target": "es2022",
        "types": [
            "node",
            "jest"
        ],
        "outDir": "dist"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    }
}